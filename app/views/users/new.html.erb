<%= form_for @user, url: {action: "create"}, html: {class: "odin-form"} do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email, placeholder: "example@example.com" %> 
    <%= f.label :username, "Your Username Here:" %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "password" %>

    <%= f.submit %>

<% end %>